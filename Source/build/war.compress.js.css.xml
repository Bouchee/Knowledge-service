			<fileset file="${basedir}/${warname}"/>
		</copy>
	</target>
	-->

	<!-- 清除临时资源 -->
	<target name="clean" depends="deploy">
		<echo message="正在清除缓存资源,请稍候..." />
		<delete dir="${appfolder}" />
	</target>

